{
    "name": "StreamDeploy Agent Development",
    "image": "mcr.microsoft.com/devcontainers/cpp:1-ubuntu-22.04",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "twxs.cmake"
            ],
            "settings": {
                "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
                "C_Cpp.default.intelliSenseMode": "linux-gcc-arm64",
                "cmake.configureOnOpen": true,
                "cmake.buildDirectory": "${workspaceFolder}/agent/build"
            }
        }
    },

    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential cmake pkg-config libcurl4-openssl-dev libssl-dev libmosquitto-dev nlohmann-json3-dev git",

    "remoteUser": "vscode",
    "workspaceFolder": "/workspaces/streamdeploy-agent"
}